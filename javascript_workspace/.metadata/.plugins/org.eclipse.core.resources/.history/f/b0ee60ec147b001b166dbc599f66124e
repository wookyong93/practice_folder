<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>문제 12</title>
<script>
	var emailReg = /^[A-Za-z0-9!#$%^&*_-]+@[A-Za-z0-9!#$%^&*_-]+(\.[A-Za-z0-9!#$%^&*-_]+){1,2}$/;
	
	email1=prompt('이메일 주소를 입력하세요 ');
	if(emailReg.test(email1)){
		document.write(email1)
	}else{
		alert('잘못된 이메일 형식입니다.')
	}

</script>
</head>
<body>

</body>
</html>