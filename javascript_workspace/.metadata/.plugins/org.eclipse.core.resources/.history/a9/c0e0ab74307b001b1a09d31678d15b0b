<script type="text/javascript">
		bt1.onclick = function(){
			var bt1 = document.getElementById('start');
			var i = 0;
			setInterval(function(){
				i++;
				alert(i);
			},2000);
	};
	
		onclick=function(){
			var bt2 = document.getElementById('end');
			clearInterval();
		};
</script>
